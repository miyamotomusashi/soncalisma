@model deneysan.Models.ProductWrapperModel
@{
    Layout = "~/Views/Shared/frontlayout.cshtml";
}
<link rel="stylesheet" href="~/Content/Styles/portfolio.css" type="text/css" />

<div class="main_content mainpage pageheight" style="">
    <div class="wrapper mainpage grid_12">
        <div class="content_page page">
            <h2>@ProductRess.ProductStrings.productsheader</h2>
            <hr class="wide">
            <div id="portfolio">
                @foreach (var group in Model.productgroups)
                {
                    <div class="portfolio-item">
                        <div class="portfolio-image" style="display: block">
                            <a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_products/@group.PageSlug/@group.ProductGroupId">
                                <img src="@group.GroupImage" alt="@group.GroupName" title="@group.GroupName" />
                            </a>
                        </div>
                        <div class="portfolio-title">
                            <h3 title="@group.GroupName">
                                <a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_products/@group.PageSlug/@group.ProductGroupId">@group.GroupName</a>
                            </h3>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
